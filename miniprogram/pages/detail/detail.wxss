/* pages/detail/detail.wxss */

page {
  background-color: rgba(146, 139, 139, 0.2);
}

.detail-head {
  padding: 20rpx;
  position: relative;
  background-color: #fafafa;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  overflow: hidden;
}

.my-bluer {
  position: absolute;
  top:0;right:0;bottom:0;left:0;
  width: 100%;
  height: 100%;
  z-index: 0;
  filter: blur(20rpx);
  opacity: 0.9;
}

.detail-head-simple {
  position: absolute;
  top: 20rpx;
  left: 260rpx;
}

.detail-head-simple view:nth-child(1) {
  font-size: 42rpx;
}

.detail-head-simple view:nth-child(2) {
  margin-top: 20rpx;
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.6);
}

.detail-head-simple view:nth-child(3) {
  margin-top: 20rpx;
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.6);
}

.detail-middle {
  margin: 20rpx;
  background-color: #fafafa;
  padding: 20rpx;
  text-align: justify;
  border-radius: 10rpx;
  box-shadow: white 0px 2px 1px, black 0px 2px 2px, white -1px 2px 1px;
}

.detail-art {
  margin: 40rpx 10rpx;
  background-color: #fafafa;
  padding: 10rpx;
  border-radius: 10rpx;
  box-shadow: white 0px 2px 1px, black 0px 2px 2px, white -1px 2px 1px;
}

.detail-art view:nth-child(1) {
  display: flex;
  justify-content: space-between;
  overflow: hidden;
  text-align: center;
}

.detail-art text {
  margin-top: 20rpx;
  font-size: 20rpx;
  color: rgba(0, 0, 0, 0.6);
  display: inline-block;
}
.stars {
  margin-top: 20rpx;
  display: flex;
  justify-content: baseline;
}

.stars text {
  display: inline-block;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.6);
  
}

.van-rate__item {
  margin-top: 0 !important;
  padding-top: 0rpx !important;
}

.popular_reviews {
  margin: 40rpx 10rpx;
  background-color: #fafafa;
  padding: 10rpx;
  border-radius: 10rpx;
  box-shadow: white 0px 2px 1px, black 0px 2px 2px, white -1px 2px 1px;
}

.popular_reviews_head {
  display: flex;
  justify-content: baseline;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.my-popular {
  margin: 40rpx 10rpx;
  color: rgba(0, 0, 0, 0.6);
  background-color: #fafafa;
  padding: 10rpx;
  border-radius: 10rpx;
  box-shadow: white 0px 2px 1px, black 0px 2px 2px, white -1px 2px 1px;
}