<van-toast id="van-toast" class="mytoast"/>
<van-dialog id="van-dialog" class="mytoast"/>

<van-tabbar class="mybar" active="{{ active }}" bind:change="onFootTabChange">
  <van-tabbar-item name="home" icon="home-o">ەسىمدەر</van-tabbar-item>
  <van-tabbar-item name="mine" icon="contact">مەنىڭ</van-tabbar-item>
  <van-tabbar-item name="news" icon="bulb-o">مازمۇن</van-tabbar-item>
</van-tabbar>