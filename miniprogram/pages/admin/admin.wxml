<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">قايتۋ</view>
  <view slot="content">تەكشە باسقارۋشىسى</view>
</cu-custom>

<scroll-view scroll-x class="bg-white nav" scroll-with-animation scroll-left="{{scrollLeft}}" style="top:{{CustomBar}}px">
  <view class="cu-item {{index==TabCur?'text-blue cur':''}}" wx:for="{{tabNav}}" wx:key bindtap='tabSelect' data-id="{{index}}">
    {{tabNav[index]}}
  </view>
</scroll-view>

<block wx:if="{{TabCur==0}}">

  <form>
    <view class="cu-form-group">
      <view class="title">链接</view>
      <input placeholder="请输入链接" bindinput="inputUrl" value="{{url}}"></input>
      <button class="cu-btn bg-cyan shadow" bindtap="getMsg" data-target="Modal">获取</button>
    </view>
    <view class="cu-form-group margin-top">
      <view class="title">栏目选择</view>
      <picker class="column" bindchange="PickerKinoChange" value="{{index}}" range="{{picker}}" range-key="cname" data-pid="{{picker[1].cid}}">
        <view class="picker column">
          {{index?picker[index].cname:'请选择栏目'}}
        </view>
      </picker>
    </view>
    <view class="cu-form-group margin-top">
      <view class="title">标题</view>
      <input placeholder="统一标题的宽度" value="{{title}}" bindinput="inputTitle"></input>
    </view>
    <view class="cu-form-group">
      <view class="title">图片</view>
      <input placeholder="输入框带个图标" value="{{image}}" bindinput="inputImg"></input>
    </view>

    <view class="padding flex flex-direction">
      <button class="cu-btn bg-green lg" bindtap="submitMsg" data-target="Modal">تەلە-فيلىم قوسۋ</button>
    </view>

  </form>

</block>
