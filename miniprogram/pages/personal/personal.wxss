/* pages/personal/personal.wxss */
/* 头部 */

.header-container {
  display: flex;
  flex-direction: row;
  height: 300rpx;
  overflow: hidden;
  align-items: center;
  position: relative;
}

.header-bg {
  width: 100%;
  height: 100%;
  filter: blur(5px);
}

/* 名称和头像 */

.userContent {
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 300px;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  align-items: center;
}

.header-nickname {
  color: #fff;
  font-size: 50rpx;
}

.personal-btn {
  direction: rtl;
}
