.mytitle {
  font-size: 40rpx !important;
  font-weight: bolder !important;
}
.search-inputs {
  direction: rtl;
}
.search-inputs .van-cell__left-icon-wrap {
  margin-left: 10px;
}
.swiper-container{
  position: relative;
}
.swiper-container .swiper{
  height: 380rpx;
}
.swiper-container .swiper .img{
  width: 100%;
  height: 100%;
}
.swiper-container .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}
.swiper-container .dots .dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all .6s;
}
.swiper-container .dots .dot.active{
  width: 24rpx;
  background: #41B883;
}

.article-cat {
  padding-top: 10rpx;
}

.artical-model {
  display: flex;
  direction: rtl;
  border: 1px dashed lightgray;
  border-radius: 10rpx;
  margin: 10rpx;
  height: 160rpx;
  background-color: #fff;
}
.artical-model .img{
  height: 140rpx;
  width: 140rpx;
  margin: 10rpx;
}
.artical-model .img image {
  width: 70px;
  height: 140rpx;
  border-radius: 10rpx;
}
.artical-model .title-container{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin: 0rpx 16rpx;
}

.title-container .big-title{
  text-align: justify;
  text-overflow: -o-ellipsis-lastline;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;
}
.title-container .sub-title{
  font-size: 25rpx;
  color: rgba(0, 0, 0, .7);
  display: flex;
  justify-content: space-around;
}